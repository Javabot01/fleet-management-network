                    <div class="px-4 row mt-3 py-0 mx-5">
                        <i class="fas fa-bars"></i>
                        <p class="d-inline">Inspection Details</p>
                    </div>

                    <form class="px-4 mt-2 form-group" action="/inspection/add" method="POST" id="inspectionForm">
                        <div class="row mx-5 card px-4">
                            <div class="form-group">
                                <div class="row mt-4">
                                    <div class="col-md-1 pr-0">
                                        <label for="exampleInputEmail1">Issue</label>
                                    </div>
                                    <div class="col-md-10 px-0 mx-0">
                                        <select name="vehicleIssue" id="vehicleIssue" class="form-control">
                                            <option>Select an issue</option>
                                            <% issues.forEach(issue => { %>
                                            <option value="<%= issue._id %>"><%= issue.summary %></option>
                                            <!-- <option>Damaged break pads</option> -->
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <!--row-->
                            </div>

                            <hr class="hr-form">

                            <div class="form-group mb-0">
                                <div class="row">
                                    <div class="col-md-1">
                                        <label for="exampleInputEmail1" class="align-middle px-0">Date</label>
                                    </div>
                                    <div class="col-md-3 px-0">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="2019/03/04"
                                                id="datepicker" name="issueDate">
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i class="ti-calendar"></i></span>
                                            </div>
                                        </div><!-- input-group -->
                                    </div>
                                </div>
                            </div>

                             <hr class="hr-form">
                             
                            <div class="form-group">
                                <div class="row mb-0">
                                    <div class="col-md-1">
                                        <label for="exampleInputEmail1" class="align-middle px-0">Due Date <span
                                                style="color: red; font-weight: bold;">*</span></label>
                                    </div>
                                    <div class="col-md-3 px-0">
                                        <div class="input-group">
                                            <input type="text" class="form-control datepicker" placeholder="2019/07/31"
                                                id="datepicker" name="dueDate">
                                            <div class="input-group-append">
                                                <span class="input-group-text"><i class="ti-calendar"></i></span>
                                            </div>
                                        </div><!-- input-group -->
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1">

                                </div>
                                <div class="py-o mt-0 mb-3">
                                    <button type="submit" class="btn btn-success waves-effect w-md waves-light">Save
                                        Inspection Entry
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!--card-->

                        <!-- footer buttons -->

                    </form>
                </div>



                <!-- container -->

            </div> <!-- content -->

            <%- include('../includes/footer.ejs') -%>

        </div>


